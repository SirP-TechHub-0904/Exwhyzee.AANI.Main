@page
@model Exwhyzee.AANI.Web.Areas.Alumni.Pages.Dashboard.MemberDetailsModel
@{
}
<div class="">
    <section class="content" style="margin-top:10px;">
        <div class="container-fluid card">

            <div class="content-header" style="padding:1px 0;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12" style="padding-left:0;">
                            <h5 class="m-0" style="font-weight:900;text-align:center;">@TempData["profile"]</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:20px;">
                <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <div class="card card-primary card-outline">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                    <img class="profile-user-img img-fluid img-circle" src="../../dist/img/user4-128x128.jpg" alt="User profile picture">
                                </div>

                                <h3 class="profile-username text-center">
                                    @Html.DisplayFor(modelItem => Model.Participant.Title)
                                    @Html.DisplayFor(modelItem => Model.Participant.Surname)
                                    @Html.DisplayFor(modelItem => Model.Participant.FirstName)
                                    @Html.DisplayFor(modelItem => Model.Participant.OtherName)
                                </h3>

                                <p class="text-muted text-center" style="margin-bottom: 0.1rem;">@Model.Participant.CurrentOffice</p>
                                <p class="text-muted text-center" style="margin-bottom: 0.1rem;">@Model.Participant.CurrentPosition</p>

                                <ul class="list-group list-group-unbordered mb-3">
                                    <li class="list-group-item">
                                        <b>Email</b> <a class="float-right">@Model.Participant.Email</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Phone No.</b> <a class="float-right">@Model.Participant.PhoneNumber</a>
                                    </li>
                                  
                                </ul>
                                 <div>
                                     <h4>BIOGRAPHY</h4>
                                     <div>
                                         @Html.Raw(Model.Participant.Bio)
                                     </div>
                                 </div>
                            </div>
                            <!-- /.card-body -->
                        </div>

                    </div>
                </div>
            </div>
    </section>
</div>