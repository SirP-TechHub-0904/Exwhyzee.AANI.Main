@page
@model Exwhyzee.AANI.Web.Areas.Admin.Pages.MessagePage.Msg.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">MESSAGE CONTENT</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MessageTemplateContent.Id" />
                    <div class="form-group">
                        <label asp-for="MessageTemplateContent.Content" class="control-label"></label>
                        <input asp-for="MessageTemplateContent.Content" class="form-control" />
                        <span asp-validation-for="MessageTemplateContent.Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MessageTemplateContent.GenderStatus" class="control-label"></label>
                        @Html.DropDownListFor(model => model.MessageTemplateContent.GenderStatus, new SelectList(Enum.GetValues(typeof(Exwhyzee.AANI.Domain.Enums.GenderStatus))), new { @class = "form-control" })
                        <span asp-validation-for="MessageTemplateContent.GenderStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MessageTemplateContent.MessageTemplateCategoryId" class="control-label">Message Template Category</label>
                        <select asp-for="MessageTemplateContent.MessageTemplateCategoryId" asp-items="ViewBag.MessageId" required="required">
                            <option>Select SEC</option>

                        </select>                        <span asp-validation-for="MessageTemplateContent.MessageTemplateCategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
