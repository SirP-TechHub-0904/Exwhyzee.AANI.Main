@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}
@* If your existing Error.cshtml already has @page and @model declarations at the top,
    keep them and replace only the markup below. If not, add your project's @page/@model
    lines above this content. *@

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <span class="display-4 text-danger" aria-hidden="true">⚠️</span>
                        </div>
                        <div>
                            <h1 class="h3 mb-1">Something went wrong</h1>
                            <p class="text-muted mb-3">
                                We ran into an unexpected problem while processing your request.
                                Don't worry — our team has been notified and we're looking into it.
                            </p>

                            <div class="mb-3">
                                <button type="button" class="btn btn-primary me-2" onclick="location.href='@Url.Page("/Index")'">
                                    Go to homepage
                                </button>
                                <button type="button" class="btn btn-outline-secondary me-2" onclick="location.reload()">
                                    Try again
                                </button>
                                 
                            </div>


                            <p class="small text-muted mb-0">If the problem persists, please contact support.</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

 

<style>
    /* Small, non-invasive styling to keep the page friendly and readable even if your site doesn't use Bootstrap */
    .card {
        border-radius: .5rem;
    }

    .display-4 {
        font-size: 2.5rem;
        line-height: 1;
    }

    code {
        background: #f8f9fa;
        padding: .15rem .4rem;
        border-radius: .25rem;
    }

    @@media (max-width: 576px) {
        .display-4 {
            font-size: 2rem;
        }
    }
</style>