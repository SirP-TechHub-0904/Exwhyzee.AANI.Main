@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h3>Sign into your account</h3>
<form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group form-box">
        <input type="email" asp-for="Input.Email" class="input-text" placeholder="Email Address">
        <i class="fa fa-envelope"></i>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group form-box" style="margin-bottom:4px;">
        <input type="password" asp-for="Input.Password" class="input-text" id="myInput" placeholder="Password">
        <i class="fa fa-lock"></i>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="clearfix" style="margin-bottom:20px;">
        <input type="checkbox" onclick="myFunction()" style="float:left;"><span style="float:left;">Show Password</span>
    </div>

    <div class="checkbox form-group clearfix">
        <div class="form-check checkbox-theme">
            <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe">
            <label class="form-check-label" for="rememberMe">
                Remember me
            </label>
        </div>
        <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-password">Forgot Password</a>
    </div>
    <div class="form-group">
        <button type="submit" class="btn-md btn-theme btn-block">Login</button>
    </div>


</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
