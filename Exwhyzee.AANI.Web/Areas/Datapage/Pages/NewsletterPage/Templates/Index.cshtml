@page
@model Exwhyzee.AANI.Web.Areas.Datapage.Pages.NewsletterPage.Templates.IndexModel
@{
    ViewData["Title"] = "Message Templates";
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Message Templates</h3>
        <div class="card-tools">
            <a asp-page="./Create" class="btn btn-primary btn-sm">Create Template</a>
        </div>
    </div>

    @await Html.PartialAsync("_MessageNotice")

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                         <th>Active</th>
                        <th>Updated</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Templates)
                    {
                        <tr>
                            <td>@t.Name</td>
                            <td>@t.MessageType</td>
                             <td>
                                @if (t.IsActive)
                                {<span class="btn btn-xs bg-success">Yes</span> }
                                else
                                { <span class="btn btn-xs bg-secondary">No</span>}
                            </td>
                            <td>@(t.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? t.CreatedAt.ToString("yyyy-MM-dd HH:mm"))</td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-info preview-template-btn" data-id="@t.Id">Preview</button>
                                    <a asp-page="./Edit" asp-route-id="@t.Id" class="btn btn-sm btn-primary">Edit</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer">
        <a asp-area="Datapage" asp-page="/NewsletterPage/NotificationPage/Index" class="btn bg-gradient-warning btn-sm">Back to Notifications</a>
    </div>
</div>

@* Preview modal partial will show rendered subject + body *@
@await Html.PartialAsync("./_TemplatePreviewModal")

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            $(function () {
                // Click handler for preview buttons in the list
                $(document).on('click', '.preview-template-btn', function (e) {
                    e.preventDefault();
                    var id = $(this).data('id');
                    if (!id) return;

                    // Call Preview handler (GET Template) to get rendered subject/body using sample tokens
                    $.get('@Url.Page("./Preview", "Template")', { id: id })
                        .done(function (data) {
                            // populate modal and show
                            $('#templatePreviewModal #previewSubject').text(data.subject || '');
                            $('#templatePreviewModal #previewBody').html(data.body || '');
                            $('#templatePreviewModal').modal('show');
                        })
                        .fail(function () {
                            alert('Failed to load template preview. Please try again.');
                        });
                });
            });
        })();
    </script>
}