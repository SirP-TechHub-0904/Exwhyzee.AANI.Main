@page "{chapterId:long}"
@model Exwhyzee.AANI.Web.Areas.Datapage.Pages.Account.UpdateChapterAccountModel
@{
    ViewData["Title"] = "Update Chapter Executives";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <!-- Form to add member to chapter executives -->
        <form method="post" asp-route-chapterId="@Model.CurrentChapterId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id" />
            <div class="form-group">
                <label asp-for="Input.ParticipantId">Select Member</label>
                <select asp-for="Input.ParticipantId" asp-items="Model.ParticipantList" class="form-control">
                    <option value="">-- Select a Member --</option>
                </select>
                <span asp-validation-for="Input.ParticipantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Position">Executive Position</label>
                <input asp-for="Input.Position" class="form-control" />
                <span asp-validation-for="Input.Position" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Add/Update Executive</button>
        </form>

        <hr />

        <!-- List current executives with update/remove buttons -->
        <h4>Current Executives</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>Position</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exec in Model.ChapterExecutives)
                {
                    <tr>
                        <td>@exec.Participant?.Surname @exec.Participant?.FirstName @exec.Participant?.OtherName</td>
                        <td>@exec.Position</td>
                        <td>
                            <!-- Button to trigger Edit Modal -->
                            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#editModal"
                                    data-exec-id="@exec.Id"
                                    data-exec-name="@exec.Participant?.Surname @exec.Participant?.FirstName"
                                    data-exec-position="@exec.Position">
                                Update Position
                            </button>

                            <!-- Button to trigger Delete Modal -->
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal"
                                    data-exec-id="@exec.Id"
                                    data-exec-name="@exec.Participant?.Surname @exec.Participant?.FirstName">
                                Remove
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Edit Executive Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-page-handler="UpdatePosition" asp-route-chapterId="@Model.CurrentChapterId">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Update Position for <strong id="editExecName"></strong></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Input.Id" id="editExecId" />
                    <div class="form-group">
                        <label for="editExecPosition">Position</label>
                        <input type="text" name="Input.Position" id="editExecPosition" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete" asp-route-chapterId="@Model.CurrentChapterId">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to remove <strong id="deleteExecName"></strong> from the executives?</p>
                    <input type="hidden" name="id" id="deleteExecId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            // Script for Edit Modal
            $('#editModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Button that triggered the modal
                var execId = button.data('exec-id');
                var execName = button.data('exec-name');
                var execPosition = button.data('exec-position');

                var modal = $(this);
                modal.find('#editExecName').text(execName);
                modal.find('#editExecId').val(execId);
                modal.find('#editExecPosition').val(execPosition);
            });

            // Script for Delete Modal
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Button that triggered the modal
                var execId = button.data('exec-id');
                var execName = button.data('exec-name');

                var modal = $(this);
                modal.find('#deleteExecName').text(execName);
                modal.find('#deleteExecId').val(execId);
            });
        });
    </script>
}