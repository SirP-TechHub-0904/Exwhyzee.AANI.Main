@page "/contestants/{yearId:long}/{positionId:long}"
@model Exwhyzee.AANI.Web.Areas.Datapage.Pages.Account.ContestantsModel

@{
    ViewData["Title"] = "Contestants";
}

<style>
    .card-widget {
        border: 0;
        position: relative;
    }

    .widget-user .widget-user-header {
        border-top-left-radius: .25rem;
        border-top-right-radius: .25rem;
        height: 135px;
        padding: 1rem;
        text-align: center;
    }

    .widget-user .widget-user-username {
        font-size: 25px;
        font-weight: 300;
        margin-bottom: 0;
        margin-top: 0;
        text-shadow: 0 1px 1px rgba(0,0,0,.2);
    }

    .widget-user .widget-user-desc {
        margin-top: 0;
    }

    .widget-user .widget-user-image {
        left: 50%;
        margin-left: -45px;
        position: absolute;
        top: 80px;
    }

        .widget-user .widget-user-image > img {
            border: 3px solid #fff;
            height: auto;
            width: 90px;
        }

    .img-circle {
        border-radius: 50%;
    }
</style>

<div class="">
    <section class="content" style="margin-top:10px;">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">CONTESTANTS FOR @Model.ExecutivePosition.Position</h3>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-page="./CampainPage" asp-route-yearId="@Model.CurrentYearId" class="btn btn-xs btn-secondary mb-2 float-right"><i class="fas fa-arrow-left"></i> Back to Positions</a>
                    @if (User.IsInRole("Admin"))
                    {
                           <button type="button" class="btn btn-success btn-xs float-right" data-toggle="modal" data-target="#addContestantModal">
                                <i class="fas fa-plus"></i> Add Contestant
                            </button>
                        
                    }
                }
            </div>
            
            <div class="row">
                @foreach (var item in Model.Campain)
                {
                    <div class="col-md-4">
                        <div class="card card-widget widget-user">
                            <div class="widget-user-header text-white" style="background: url('/img/bgaani.jpg') center center;">
                                <h3 class="widget-user-username text-right">@item.Participant.Fullname</h3>
                                <h5 class="widget-user-desc text-right">SEC @item.Participant.SEC?.Number (@item.Participant.SEC?.Year)</h5>
                            </div>
                            <div class="widget-user-image">
                                <a onclick="showPictureModal('@item.Id')" style="cursor: zoom-in;">
                                    <img class="profile-user-img img-fluid img-circle" src="@(item.ImageUrl ?? "/img/campaign.jpg")" alt="campaign picture">
                                </a>
                            </div>
                            <div class="card-footer">
                                <div class="row mb-2">
                                    <div class="col-sm-6 border-right">
                                        <div class="description-block">
                                            <a class="btn btn-sm btn-secondary" onclick="showModal('@item.Id')">Manifesto</a>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="description-block">
                                            <a class="btn btn-sm btn-info" asp-page="./MemberDetails" asp-route-id="@item.Participant.Id">Biography</a>
                                        </div>
                                    </div>
                                </div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="row text-center">
                                        <div class="col-12">
                                            <a asp-page="/ExecutivePage/MemberCampain/Edit" asp-area="Main" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Update</a>
                                            <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#removeModal" data-campaign-id="@item.Id" data-name="@item.Participant.Fullname">Remove</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.Campain.Any())
                {
                    <div class="col-12">
                        <p class="text-center mt-4">No contestants have been added for this position yet.</p>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

@section Modal {
    <!-- Add Contestant Modal -->
    <div class="modal fade" id="addContestantModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form method="post" enctype="multipart/form-data" asp-page-handler="AddContestant" asp-route-yearId="@Model.CurrentYearId" asp-route-positionId="@Model.ExecutivePosition.Id">
                    <div class="modal-header">
                        <h5 class="modal-title">Add Contestant for @Model.ExecutivePosition.Position</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label asp-for="Input.ParticipantId">Select Qualified Member</label>
                            <select asp-for="Input.ParticipantId" asp-items="Model.QualifiedParticipants" class="form-control">
                                <option value="">-- Select a Member --</option>
                            </select>
                            <span asp-validation-for="Input.ParticipantId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Manifesto"></label>
                            <textarea asp-for="Input.Manifesto" class="form-control" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.CampaignQoute">Campaign Quote</label>
                            <input asp-for="Input.CampaignQoute" class="form-control" />
                        </div>
                        <!-- NEW FILE INPUT ADDED -->
                        <div class="form-group">
                            <label asp-for="ImageFile">Campaign Image</label>
                            <input type="file" asp-for="ImageFile" class="form-control-file" accept="image/*" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Add Contestant</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Remove Confirmation Modal -->
    <div class="modal fade" id="removeModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form method="post" asp-page-handler="Remove" asp-route-yearId="@Model.CurrentYearId" asp-route-positionId="@Model.ExecutivePosition.Id">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirm Removal</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to remove <strong id="removeName"></strong> from this campaign?</p>
                        <input type="hidden" name="campaignId" id="removeCampaignId" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Manifesto Modal -->
    <div class="modal" id="userModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="userDetailsT"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="userDetails"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Picture Modal -->
    <div class="modal" id="userModalP" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="userDetailsTilte"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="userDetailsP"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            // Script for Remove Modal
            $('#removeModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var campaignId = button.data('campaign-id');
                var name = button.data('name');
                var modal = $(this);
                modal.find('#removeCampaignId').val(campaignId);
                modal.find('#removeName').text(name);
            });
        });

        function showModal(userId) {
            // Make an AJAX request to retrieve user details by the ID
            $.ajax({
                url: '?handler=Details',
                type: 'GET',
                data: { id: userId },
                success: function (data) {
                    $('#userDetails').html(data.description);
                    $('#userDetailsT').html(data.title);
                    $('#userModal').modal('show'); // Show the modal
                },
                error: function () {
                    alert('Error retrieving manifesto details.');
                }
            });
        }

        function showPictureModal(userId) {
            // Make an AJAX request to retrieve user details by the ID
            $.ajax({
                url: '?handler=DetailsPicture',
                type: 'GET',
                data: { id: userId },
                success: function (data) {
                    $('#userDetailsP').html(data.description);
                    $('#userDetailsTilte').html(data.title);
                    $('#userModalP').modal('show'); // Show the modal
                },
                error: function () {
                    alert('Error retrieving picture details.');
                }
            });
        }
    </script>
}