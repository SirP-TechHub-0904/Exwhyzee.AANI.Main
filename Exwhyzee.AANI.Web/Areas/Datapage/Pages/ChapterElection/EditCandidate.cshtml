@page "{candidateId:long}/{electionId:long}/{chapterId:long}"
@model Exwhyzee.AANI.Web.Areas.Datapage.Pages.ChapterElection.EditCandidateModel
@using Exwhyzee.AANI.Domain.Models
@{
    ViewData["Title"] = "Edit Candidate";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">Edit Candidate</h3>
        <div>
            <a asp-area="Datapage" asp-page="/ChapterElection/Candidates" asp-route-electionId="@Model.ElectionId" asp-route-chapterId="@Model.ChapterId" class="btn btn-sm btn-outline-secondary">Back</a>
        </div>
    </div>

    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="CandidateEdit.CandidateId" />
            <input type="hidden" asp-for="ElectionId" />
            <input type="hidden" asp-for="ChapterId" />

            <div class="mb-3">
                <label class="form-label">Participant</label>
                <input readonly class="form-control-plaintext" value="@Model.CandidateEdit.CandidateName" />
            </div>

            <div class="mb-3">
                <label class="form-label">Position (optional)</label>
                <select asp-for="CandidateEdit.PositionId" class="form-control">
                    <option value="">Unassigned</option>
                    @foreach (var p in Model.Positions)
                    {
                        <option value="@p.Id" selected="@(p.Id == (Model.CandidateEdit.PositionId ?? 0) ? "selected" : null)">@p.Name</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Manifesto</label>
                <textarea asp-for="CandidateEdit.Manifesto" rows="5" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Ballot order</label>
                <input asp-for="CandidateEdit.BallotOrder" type="number" class="form-control" />
            </div>

            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-area="Datapage" asp-page="/ChapterElection/Candidates" asp-route-electionId="@Model.ElectionId" asp-route-chapterId="@Model.ChapterId" class="btn btn-outline-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}