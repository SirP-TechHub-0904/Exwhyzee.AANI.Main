@page "{chapterId:long}/{electionId?}"
@model Exwhyzee.AANI.Web.Areas.Datapage.Pages.ChapterElection.CreateModel
@{
    ViewData["Title"] = "Create/Edit Election";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            CHAPTER ELECTION — Create / Edit
        </h3>
        <div class="hidden-sm hidden-xs">
            <a asp-page="/ChapterElection/Elections" asp-route-chapterId="@Model.ChapterId" class="btn bg-gradient-warning btn-xs" style="float: right; font-size: .775rem;">Back</a>
        </div>
    </div>
    <div class="card-body">
        <h4>Chapter: @Model.Chapter?.State</h4>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

    <form method="post">
        <input type="hidden" asp-for="ChapterId" />
        <input type="hidden" asp-for="Input.Id" />

        <div class="mb-3">
            <label asp-for="Input.Title" class="form-label"></label>
            <input asp-for="Input.Title" class="form-control" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Description" class="form-label"></label>
            <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Input.Description" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Input.StartAt" class="form-label">Start (Date and Time)</label>
                <input asp-for="Input.StartAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="Input.StartAt" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Input.EndAt" class="form-label">End (Date and Time)</label>
                <input asp-for="Input.EndAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="Input.EndAt" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Input.ElectionStatus" class="control-label">Status</label>
            @Html.DropDownListFor(model => model.Input.ElectionStatus, new SelectList(Enum.GetValues(typeof(Exwhyzee.AANI.Domain.Enums.ElectionStatus))), new { @class = "form-control" })
            <span asp-validation-for="Input.ElectionStatus" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save Election</button>
        <a asp-area="Datapage" asp-page="/ChapterElection/Members" asp-route-chapterId="@Model.ChapterId" class="btn btn-outline-secondary ms-2">Cancel</a>
    </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}