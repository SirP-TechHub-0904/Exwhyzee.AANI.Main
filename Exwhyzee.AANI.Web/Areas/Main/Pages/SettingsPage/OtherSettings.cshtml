@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.SettingsPage.OtherSettingsModel
@{
}
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">
            Other Settings
        </h3>
       
    </div>
  
    <div class="card-body">

        <div class="">
            <div class="card">
               
                <div class="card-body">
                    @if (!String.IsNullOrEmpty(Model.ContactSettingsModel.BreadcrumImageUrl))
                    {
                        <h4>Breadcrumb Image Behind the title</h4>
                        <img src="@Model.ContactSettingsModel.BreadcrumImageUrl" class="img-fluid" style="max-height:150px;" />

                    }
                </div>

                <div class="card-body">
                    <h4>Add New Breadcrumb Image</h4>
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <div class="form-group">
                            <label class="control-label">Image</label><br />
                            <input type="file" class="control-label" asp-for="imagefile" />
                        </div>

                        <hr />
                        <div class="form-section">
                            <h4>Event</h4>

                            <div class="form-group">
                                <label asp-for="ContactSettingsModel.EventTitle" class="control-label">Event Title</label>
                                <input asp-for="ContactSettingsModel.EventTitle" class="form-control" />
                                <span asp-validation-for="ContactSettingsModel.EventTitle" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ContactSettingsModel.EventSubtitle" class="control-label">Event Subtitle</label>
                                <input asp-for="ContactSettingsModel.EventSubtitle" class="form-control" />
                                <span asp-validation-for="ContactSettingsModel.EventSubtitle" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ContactSettingsModel.EventDescription" class="control-label">Event Description</label>
                                <textarea asp-for="ContactSettingsModel.EventDescription" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="ContactSettingsModel.EventDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />

                        <div class="form-section">
                            <h4>Executive</h4>

                            <div class="form-group">
                                <label asp-for="ContactSettingsModel.ExecutiveTitle" class="control-label">Executive Title</label>
                                <input asp-for="ContactSettingsModel.ExecutiveTitle" class="form-control" />
                                <span asp-validation-for="ContactSettingsModel.ExecutiveTitle" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ContactSettingsModel.ExecutiveSubtitle" class="control-label">Executive Subtitle</label>
                                <input asp-for="ContactSettingsModel.ExecutiveSubtitle" class="form-control" />
                                <span asp-validation-for="ContactSettingsModel.ExecutiveSubtitle" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ContactSettingsModel.ExecutiveDescription" class="control-label">Executive Description</label>
                                <textarea asp-for="ContactSettingsModel.ExecutiveDescription" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="ContactSettingsModel.ExecutiveDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />

                        <div class="form-section">
                            <h4>Blog</h4>

                            <div class="form-group">
                                <label asp-for="ContactSettingsModel.BlogTitle" class="control-label">Blog Title</label>
                                <input asp-for="ContactSettingsModel.BlogTitle" class="form-control" />
                                <span asp-validation-for="ContactSettingsModel.BlogTitle" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ContactSettingsModel.BlogSubtitle" class="control-label">Blog Subtitle</label>
                                <input asp-for="ContactSettingsModel.BlogSubtitle" class="form-control" />
                                <span asp-validation-for="ContactSettingsModel.BlogSubtitle" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ContactSettingsModel.BlogDescription" class="control-label">Blog Description</label>
                                <textarea asp-for="ContactSettingsModel.BlogDescription" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="ContactSettingsModel.BlogDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary" />

                        </div>
                    </form>

                </div>
            </div>

        </div>

    </div>


</div>