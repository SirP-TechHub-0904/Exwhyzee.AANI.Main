@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.BlogNews.EditModel

@{
    ViewData["Title"] = "Edit";
}


<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">EDIT BLOG</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Blog.Id" />
            <input type="hidden" asp-for="Blog.ImageUrl" />
            <input type="hidden" asp-for="Blog.ImageKey" />
            <div class="form-group">
                <label asp-for="Blog.BlogCategoryId" class="control-label"></label>
                <select asp-for="Blog.BlogCategoryId" class="form-control" asp-items="ViewBag.BlogCategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Content" class="control-label"></label>
                <textarea id="summernote" asp-for="Blog.Content" class="form-control"></textarea>
                <span asp-validation-for="Blog.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.ShortDescription" class="control-label"></label>
                <input asp-for="Blog.ShortDescription" class="form-control" />
                <span asp-validation-for="Blog.ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.SortOrder" class="control-label"></label>
                <input asp-for="Blog.SortOrder" class="form-control" />
                <span asp-validation-for="Blog.SortOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@Model.Blog.ImageUrl" height="70" />
                <label class="control-label">Image(650 by 650)</label>
                <div class="">
                    <input class="form-control" type="file" accept="image/*" asp-for="imagefile" id="gallery-photo-add" />
                    <div class="gallery"></div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Source" class="control-label"></label>
                <input asp-for="Blog.Source" class="form-control" />
                <span asp-validation-for="Blog.Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Date" class="control-label"></label>
                <input asp-for="Blog.Date" class="form-control" />
                <span asp-validation-for="Blog.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

            </div>
        </form>
    </div>

<div class="card-footer">
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
