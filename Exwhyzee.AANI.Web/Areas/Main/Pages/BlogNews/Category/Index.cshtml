@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.BlogNews.Category.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Blog Category</h3>

        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Create New</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            @Html.DisplayNameFor(model => model.BlogCategory[0].Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BlogCategory[0].Show)
                        </th>
                        <th>Links</th>
                        <th></th>
                    </tr>
                </thead>  @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.BlogCategory)
                    {
                        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Show)
                            </td>
                            <td>
                                @{ var absolute = Url.Page("/Media/Details",              // page path
pageHandler: null,
values: new { catId = item.Id },       // route/query values
protocol: Request.Scheme,
host: Request.Host.Value);}
                                @absolute
                            </td>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success">Action</button>

                                        <div class="btn-group">
                                            <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                            </button>
                                            <div class="dropdown-menu" style="">

                                                <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                                <a class="dropdown-item" asp-page="./Post" asp-route-id="@item.Id">Posts</a>

                                            </div>
                                        </div>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
