@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.ContributorsPage.Category.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title" style="text-transform:uppercase;">ALUMNI WHO BECAME @Model.ContributorCategory.Title</h3>
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <a asp-page="/ContributorsPage/ContributorList/Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Create New</a>
        }
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            NAME
                        </th>
                        <th>
                            SEC NUMBER
                        </th>
                        <th>
                            YEAR
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.Contributor)
                    {
                        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Participant.Fullname)
                            </td>
                            <td>
                                SEC @Html.DisplayFor(modelItem => item.Participant.SEC.Number)
                            </td>
                            <td>

                                @item.Year
                            </td>

                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>

                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
