@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.Funding.FundPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">FUNDING LIST</h3>
        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Add New</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            Alumni
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fund[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fund[0].DatePaid)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fund[0].FundStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fund[0].Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fund[0].Event)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fund[0].FundCategory)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.Fund)
                    {
                        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Participant.Fullname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DatePaid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FundStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Event.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FundCategory.Title)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>

                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
