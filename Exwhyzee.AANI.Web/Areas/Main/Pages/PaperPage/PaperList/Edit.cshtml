@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.PaperPage.PaperList.EditModel

@{
    ViewData["Title"] = "Edit";
}


<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE PAPER</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Paper.Id" />
                    <div class="form-group">
                        <label asp-for="Paper.ParticipantId" class="control-label"></label>
                        <select asp-for="Paper.ParticipantId" class="form-control select2 select2-primary js-example-basic-single" data-dropdown-css-class="select2-primary" asp-items="ViewBag.ParticipantId"></select>
                        <span asp-validation-for="Paper.ParticipantId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paper.Date" class="control-label"></label>
                        <input asp-for="Paper.Date" class="form-control" />
                        <span asp-validation-for="Paper.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paper.Title" class="control-label"></label>
                        <input asp-for="Paper.Title" class="form-control" />
                        <span asp-validation-for="Paper.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paper.Description" class="control-label"></label>
                        <input asp-for="Paper.Description" class="form-control" />
                        <span asp-validation-for="Paper.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paper.File" class="control-label"></label>
                        <input asp-for="Paper.File" class="form-control" />
                        <span asp-validation-for="Paper.File" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paper.Year" class="control-label"></label>
                        <input asp-for="Paper.Year" class="form-control" />
                        <span asp-validation-for="Paper.Year" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paper.EventId" class="control-label"></label>
                        <select asp-for="Paper.EventId" class="form-control select2 select2-primary js-example-basic-single" data-dropdown-css-class="select2-primary" asp-items="ViewBag.EventId">
                            <option>None</option>

                        </select>
                        <span asp-validation-for="Paper.EventId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paper.PaperCategoryId" class="control-label"></label>
                        <select asp-for="Paper.PaperCategoryId" class="form-control select2 select2-primary js-example-basic-single" data-dropdown-css-class="select2-primary" asp-items="ViewBag.PaperCategoryId"></select>
                        <span asp-validation-for="Paper.PaperCategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
