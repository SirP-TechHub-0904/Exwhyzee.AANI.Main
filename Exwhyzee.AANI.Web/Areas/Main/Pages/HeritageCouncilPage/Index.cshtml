@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.HeritageCouncilPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">AANI HERITAGE COUNCIL</h3>
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin")){

        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Add New</a>
        }  </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
            <th>
                @Html.DisplayNameFor(model => model.HeritageCouncil[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeritageCouncil[0].Council)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeritageCouncil[0].Alumni)
            </th>
           @if (User.Identity.IsAuthenticated && User.IsInRole("Admin")){<th></th>}
        </tr>
    </thead>
                @{
                    int sn = 0;
                }
    <tbody>
@foreach (var item in Model.HeritageCouncil) {
        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Council)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumni)
            </td>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success">Action</button>

                                        <div class="btn-group">
                                            <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                            </button>
                                            <div class="dropdown-menu" style="">

                                                <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>

                                            </div>
                                        </div>
                                    </div>

                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>