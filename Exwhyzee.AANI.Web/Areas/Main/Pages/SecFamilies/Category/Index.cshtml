@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.SecFamilies.Category.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">CATEGORIES OF FAMILIES OF SEC</h3>
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin")){

        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Create New</a>
        }</div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                                    @Html.DisplayNameFor(model => model.CategoryFamiliesOnSEC[0].Title)
                        </th>
                        <th>
                                    @Html.DisplayNameFor(model => model.CategoryFamiliesOnSEC[0].Date)
                        </th>
                       @if (User.Identity.IsAuthenticated && User.IsInRole("Admin")){<th></th>}
                    </tr>
                </thead>
                        @{
                            int sn = 0;
                        }
                <tbody>
                            @foreach (var item in Model.CategoryFamiliesOnSEC)
                            {
                        <tr>
                            <td>
                                        @{
                                            sn++;
                                        }
                                        @sn
                            </td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id">
                                    
                                        @Html.DisplayFor(modelItem => item.Title)
                                </a>
                            </td>
                            <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success">Action</button>

                                        <div class="btn-group">
                                            <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                            </button>
                                            <div class="dropdown-menu" style="">

                                                <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>

                                            </div>
                                        </div>
                                    </div>

                                </td>
                            }
                        </tr>
                            }
                </tbody>
            </table>
        </div>
    </div>
</div>