@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.ConfigPage.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Update Style and config</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="StylingConfig.Id" />
                    <div class="form-group">
                        <label asp-for="StylingConfig.CSSStyle" class="control-label"></label>
                        <textarea asp-for="StylingConfig.CSSStyle" class="form-control"></textarea>
                        <span asp-validation-for="StylingConfig.CSSStyle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StylingConfig.Config" class="control-label"></label>
                        <textarea asp-for="StylingConfig.Config" class="form-control"></textarea>
                        <span asp-validation-for="StylingConfig.Config" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
