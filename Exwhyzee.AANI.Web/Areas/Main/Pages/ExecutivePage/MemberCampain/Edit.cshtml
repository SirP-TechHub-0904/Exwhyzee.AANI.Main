@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.ExecutivePage.MemberCampain.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE CAMPAIGN INFORMATION FOR @Model.Campain.Participant.Fullname.ToUpper() FOR @Model.Campain.ExecutivePosition.Position</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Campain.Id" />
                    <input type="hidden" asp-for="Campain.ParticipantId" />
                    <input type="hidden" asp-for="Campain.ExecutivePositionId" />
                    <input type="hidden" asp-for="Campain.ImageUrl" />
                    <input type="hidden" asp-for="Campain.ImageKey" />
                    <input type="hidden" asp-for="Campain.OperationYearId" />

                    <div class="form-group">
                        <label asp-for="Campain.Date" class="control-label"></label>
                        <input asp-for="Campain.Date" class="form-control" />
                        <span asp-validation-for="Campain.Date" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Campain.Manifesto" class="control-label"></label>
                        <textarea asp-for="Campain.Manifesto" class="form-control summernote"></textarea>
                        <span asp-validation-for="Campain.Manifesto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Campain.CampaignQoute" class="control-label"></label>
                        <input asp-for="Campain.CampaignQoute" class="form-control" />
                        <span asp-validation-for="Campain.CampaignQoute" class="text-danger"></span>
                    </div>

                    <!-- === SIMPLIFIED IMAGE SECTION === -->
                    <div class="form-group">
                        <label class="control-label">Upload New Image (Optional)</label><br />

                        <!-- Display current image only if it exists -->
                        @if (!string.IsNullOrEmpty(Model.Campain.ImageUrl))
                        {
                            <div class="mb-2">
                                <p class="text-muted">Current Image:</p>
                                <img src="@Model.Campain.ImageUrl" class="img-thumbnail" style="max-width: 250px;" alt="Current Campaign Image" />
                            </div>
                        }

                        <input type="file" class="control-label" asp-for="imagefile" accept="image/*" />
                        <small class="form-text text-muted">Select a new file only if you want to replace the current image.</small>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="/Account/Contestants" asp-area="Datapage" asp-route-yearId="@Model.Campain.OperationYearId" asp-route-positionId="@Model.Campain.ExecutivePositionId" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
