@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.ExecutivePage.ActiveExecutive.IndexModel

@{
    ViewData["Title"] = "Executives";
}

<style>
    /* Styles from before... */
    .executive-card {
        text-align: center;
        margin-bottom: 2rem;
        border: 1px solid #dee2e6;
        border-radius: .3rem;
        box-shadow: 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24);
        transition: all 0.3s cubic-bezier(.25,.8,.25,1);
    }

        .executive-card:hover {
            box-shadow: 0 14px 28px rgba(0,0,0,.25), 0 10px 10px rgba(0,0,0,.22);
        }

        .executive-card .card-body {
            padding: 1.5rem;
        }

        .executive-card .profile-picture {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 1rem;
            border: 4px solid #fff;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        .executive-card .name {
            font-weight: 600;
            font-size: 1.2rem;
            margin-bottom: .25rem;
        }

        .executive-card .position {
            color: #6c757d;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: .5px;
            font-size: .8rem;
            margin-bottom: .5rem;
        }

        .executive-card .sec-details {
            font-size: .9rem;
            color: #adb5bd;
        }
</style>

<div class="card">
    <!-- === UPDATED HEADER WITH FLEXBOX === -->
    <div class="card-header">
        <h3 class="card-title mb-0">EXECUTIVES - @Model.CurrentOperationYear?.Name</h3>

        @if (User.IsInRole("Admin"))
        {
            <div class="d-flex align-items-center" style="float: right;">
                <!-- Filter Dropdown -->
                <form class="form-inline mr-3">
                    <div class="form-group">
                        <label for="yearFilter" class="mr-2" style="font-weight:normal;">Filter by Year</label>
                        <select id="yearFilter" class="form-control form-control-sm" asp-for="OperationYearId" asp-items="Model.OperationYearsSL"></select>
                    </div>
                </form>

                <!-- Create Button -->
                <a asp-page="./Create" asp-route-OperationYearId="@Model.OperationYearId" class="btn bg-gradient-warning btn-xs">
                    Add New Executive for @Model.CurrentOperationYear?.Name
                </a>
            </div>
        }
    </div>

    <div class="card-body">
        <!-- The filter has been moved from here to the header -->
        <!-- === EXECUTIVE CARDS GRID === -->
        <div class="row mt-4">
            @foreach (var item in Model.Executive)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="executive-card">
                        <div class="card-body">
                            <img src="@(item.Participant.PictureUrl ?? "/default-avatar.png")" alt="Profile Picture" class="profile-picture">
                            <div class="name">@item.Participant.Fullname</div>
                            <div class="position">@item.ExecutivePosition.Position</div>
                            <div class="sec-details">SEC @item.Participant.SEC.Number - @item.Participant.SEC.Year</div>
                            <hr>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Edit</a>

                                <!-- === NEW DELETE BUTTON === -->
                                <button type="button" class="btn btn-outline-danger btn-sm delete-btn"
                                        data-id="@item.Id"
                                        data-name="@item.Participant.Fullname"
                                        data-toggle="modal"
                                        data-target="#deleteModal">
                                    Delete
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
            @if (!Model.Executive.Any())
            {
                <div class="col-12">
                    <p class="text-center">No executives found for the year @Model.CurrentOperationYear?.Name.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- === NEW DELETE CONFIRMATION MODAL === -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to remove <strong id="deleteExecutiveName"></strong> from their executive position?</p>
                    <input type="hidden" name="id" id="deleteExecutiveId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(function () {
            // Script for the year filter
            $('#yearFilter').on('change', function () {
                var selectedYearId = $(this).val();
                window.location.href = '/Main/ExecutivePage/ActiveExecutive?OperationYearId=' + selectedYearId;
            });

            // === NEW SCRIPT FOR DELETE MODAL ===
            $('.delete-btn').on('click', function () {
                var id = $(this).data('id');
                var name = $(this).data('name');

                // Populate the modal with the executive's details
                $('#deleteExecutiveId').val(id);
                $('#deleteExecutiveName').text(name);
            });
        });
    </script>
}
