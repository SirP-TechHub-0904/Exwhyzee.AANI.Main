@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.ExecutivePage.ActiveExecutive.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">ADD A NEW EXECUTIVE</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Executive.OperationYearId" />
                    <div class="form-group">
                        <label asp-for="Executive.ParticipantId" class="control-label"></label>
                        <select asp-for="Executive.ParticipantId" class="form-control select2 select2-primary js-example-basic-single" data-dropdown-css-class="select2-primary" asp-items="ViewBag.ParticipantId"></select>
                    </div>


                    <div class="form-group">
                        <label asp-for="Executive.ExecutivePositionId" class="control-label">Position</label>
                        <select asp-for="Executive.ExecutivePositionId" class="form-control" asp-items="ViewBag.ExecutivePositionId"></select>

                        <span asp-validation-for="Executive.ExecutivePositionId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
