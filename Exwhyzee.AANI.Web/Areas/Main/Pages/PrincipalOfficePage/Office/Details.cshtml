@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.PrincipalOfficePage.Office.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Model.PrincipalOfficerCategory.Title OF THE NATIONAL INSTITUTE </h3>

        <a asp-page="/PrincipalOfficePage/Officers/Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Create New</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                           Name
                        </th>
                        <th>
                            From
                        </th>
                        <th>
                            To
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrincipalOfficer[0].Date)
                        </th>
                        
                        <th></th>
                    </tr>
                </thead>
                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.PrincipalOfficer)
                    {
                        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Participant.Fullname)
                            </td>
                            <td>
                                @item.DateFrom.ToString("MMMM yyyy")
                            </td>
                            <td>
                                @item.DateTo.ToString("MMMM yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                           
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="/PrincipalOfficePage/Officers/Edit" asp-route-id="@item.Id">Edit</a>

                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
