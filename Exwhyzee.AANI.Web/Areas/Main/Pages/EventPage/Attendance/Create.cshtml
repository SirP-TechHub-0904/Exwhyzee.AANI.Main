@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.EventPage.Attendance.CreateModel

@{
    ViewData["Title"] = "Bulk Check-in";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">ATTENDANCE FOR: @Model.Event.Toipc</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form method="post" asp-route-id="@Model.Event.Id">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width: 50px;">
                                <input type="checkbox" id="selectAll" />
                            </th>
                            <th>Participant</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Checklist.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" name="SelectedParticipantIds" value="@Model.Checklist[i].ParticipantId" class="participant-checkbox" />
                                </td>
                                <td>@Model.Checklist[i].FullName</td>
                                <td>@Model.Checklist[i].Details</td>
                            </tr>
                        }
                        @if (!Model.Checklist.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center">All members have been checked in.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <hr />

            <div class="form-group mt-3">
                <input type="submit" value="Check-in Selected Members" class="btn btn-success" />
                <a asp-page="/EventPage/EventManager/AttendancePage" asp-route-id="@Model.Event.Id" class="btn btn-secondary" style="float:right;">Back to Attendance List</a>
            </div>
        </form>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    <script>
        // Simple script to handle the "Select All" checkbox
        $(function () {
            $("#selectAll").click(function () {
                $(".participant-checkbox").prop('checked', $(this).prop('checked'));
            });
        });
    </script>
}