@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.EventPage.Attendance.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">EDIT ATTENDANCE</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EventAttendance.Id" />
                    <input type="hidden" asp-for="EventAttendance.EventId" />
            <div class="form-group">
                <label asp-for="EventAttendance.ParticipantId" class="control-label">Fullname</label>
                        <select asp-for="EventAttendance.ParticipantId" class="form-control select2 select2-primary js-example-basic-single" data-dropdown-css-class="select2-primary" asp-items="ViewBag.ParticipantId"></select>
                <span asp-validation-for="EventAttendance.ParticipantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventAttendance.DatetimeArrival" class="control-label"></label>
                <input asp-for="EventAttendance.DatetimeArrival" class="form-control" />
                <span asp-validation-for="EventAttendance.DatetimeArrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventAttendance.DatetimeDeparture" class="control-label"></label>
                <input asp-for="EventAttendance.DatetimeDeparture" class="form-control" />
                <span asp-validation-for="EventAttendance.DatetimeDeparture" class="text-danger"></span>
            </div>
                    <div class="form-group">
                        <label asp-for="EventAttendance.Tag" class="control-label">Tag (E.g DAY 1)</label>
                        <input asp-for="EventAttendance.Tag" class="form-control" />
                        <span asp-validation-for="EventAttendance.Tag" class="text-danger"></span>
                    </div>
           

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
