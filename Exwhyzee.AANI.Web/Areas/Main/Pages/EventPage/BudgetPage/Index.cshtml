@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.EventPage.BudgetPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            EVENT BUDGET/h3>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Create New</a>
            }
            </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            @Html.DisplayNameFor(model => model.EventBudget[0].Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EventBudget[0].Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EventBudget[0].AssignTo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EventBudget[0].Disabled)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EventBudget[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EventBudget[0].Event)
                        </th>
                       @if (User.Identity.IsAuthenticated && User.IsInRole("Admin")){<th></th>}
                    </tr>
                </thead>
                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.EventBudget)
                    {
                        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AssignTo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Disabled)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Event.Title)
                            </td>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success">Action</button>

                                        <div class="btn-group">
                                            <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                            </button>
                                            <div class="dropdown-menu" style="">

                                                <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>

                                            </div>
                                        </div>
                                    </div>

                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>