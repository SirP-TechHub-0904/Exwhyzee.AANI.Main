@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.GalleryPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">EDIT GALLERY</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Gallery.Id" />
            <div class="form-group">
                <label asp-for="Gallery.Title" class="control-label"></label>
                <input asp-for="Gallery.Title" class="form-control" />
                <span asp-validation-for="Gallery.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gallery.FilePath" class="control-label"></label>
                <input asp-for="Gallery.FilePath" class="form-control" />
                <span asp-validation-for="Gallery.FilePath" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="Gallery.CodeView" class="control-label"></label>
                <input asp-for="Gallery.CodeView" class="form-control" />
                <span asp-validation-for="Gallery.CodeView" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Gallery.DontShow" /> @Html.DisplayNameFor(model => model.Gallery.DontShow)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

            </div>
        </form>
    </div>

    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
