@page
@model Exwhyzee.AANI.Web.Areas.Main.Pages.ParticipantPage.SendResetAccountModel
@{
}
<div class="card card-default">
    <div class="card-header">
        @if (Model.Participant != null)
        {
            <h3 class="card-title">ACCOUNT RESET FOR @Model.Participant.Fullname </h3>

        }
        else
        {
            <h3 class="card-title">ACCOUNT RESET FOR PARTICIPANTS (@Model.ParticipantsList.Count())</h3>

        }
    </div>
    @await Html.PartialAsync("_MessageNotice")

    <!-- /.card-header -->
    <div class="card-body">
        @if (Model.Participant != null)
        {
            <table class="table table-bordered">
                <tr>
                    <th>Account Reset</th>
                    <td>
                        @if (Model.Participant.SendResetAccount)
                        {

                            <span class="btn bg-success">Sent</span>
                        }
                        else
                        {
                            <span class="btn bg-primary">Not Sent</span>

                        }
                    </td>
                </tr>
                <tr>
                    <th>Date Sent</th>
                    <td>
                        @(Model.Participant.DateAccountResetSent == DateTime.MinValue ? "----------" : Model.Participant.DateAccountResetSent.ToString("dd MMM yyyy hh:mm tt"))
                    </td>
                </tr>
            </table>

            <div class="row" style="margin-top:30px;">
                <div class="col-md-12">
                    <form method="post" enctype="multipart/form-data" asp-page-handler="Single">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Participant.Id" />



                        <div class="form-group">
                            <input type="submit" value="Send Reset Notification" class="btn btn-primary" />
                            <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                        </div>
                    </form>
                </div>
            </div>

        }
        else
        {
            if (Model.Chapter != null)
            {
                <h4>Filtering by Chapter: @Model.Chapter.State</h4>
            }
            <form method="get" class="form-inline" style="margin-bottom:10px;">
                <div class="form-group" style="margin-right:10px;">
                    <label style="margin-right:5px;">Chapter</label>
                    <select name="chapterId" asp-items="Model.ChapterList" class="form-control">
                        <option value="">-- All Chapters --</option>
                    </select>
                </div>
                <div class="form-group" style="margin-right:10px;">
                    <label style="margin-right:5px;">SEC</label>
                    <select name="secid" asp-items="Model.SecList" class="form-control">
                        <option value="">-- All SECs --</option>
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Filter by chapter" class="btn btn-primary" />
                </div>
            </form>

            <form method="post">
                <div class="table-responsive">

                    <table id="" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAll" />
                                    Select
                                </th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>SEC</th>
                                <th>Chapter</th>
                                <th>Account Reset</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var participant in Model.ParticipantsList.OrderByDescending(x => x.Title))
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="selectItem" name="SelectedParticipantIds" value="@participant.Id" />

                                        @*<input type="checkbox" name="SelectedParticipantIds" value="@participant.Id" />*@
                                    </td>
                                    <td>@participant.Fullname</td>
                                    <td>@participant.Email</td>
                                    <td>@participant.PhoneNumber</td>
                                    <td>@participant.SEC?.Number - @participant.SEC?.Year</td>
                                    <td>@participant.Chapter?.State</td>
                                    <td>
                                        @if (participant.SendResetAccount)
                                        {

                                            <span class="btn bg-success">Sent</span>
                                        }
                                        else
                                        {
                                            <span class="btn bg-primary">Not Sent</span>

                                        }

                                        @(participant.DateAccountResetSent == DateTime.MinValue ? "----------" : participant.DateAccountResetSent.ToString("dd MMM yyyy hh:mm tt"))
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <button type="submit" style="margin-top:15px;" class="btn btn-primary">Send Reset Links</button>
            </form>
        }

    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            console.log("DOM Loaded");

            const selectAllCheckbox = document.getElementById("selectAll");
            console.log("SelectAll:", selectAllCheckbox);

            if (!selectAllCheckbox) return;

            selectAllCheckbox.addEventListener("change", function () {
                const checked = this.checked;
                console.log("Select All changed:", checked);

                const checkboxes = document.querySelectorAll(".selectItem");
                console.log("Found checkboxes:", checkboxes.length);

                checkboxes.forEach(cb => cb.checked = checked);
            });
        });
    </script>
}
