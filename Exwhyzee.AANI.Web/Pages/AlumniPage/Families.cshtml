@page
@model Exwhyzee.AANI.Web.Pages.AlumniPage.FamiliesModel
@{
}

<style>
    .text {
        margin-top: 0px !important;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        height: none
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
</style>

<div class="page-title-section" style="background-image: url('../img/bred.jpg');">
    <div class="container">
        <h1>AANI FAMILIES</h1>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="#">AANI FAMILIES</a></li>
        </ul>
    </div>
</div>


<div class="section-block">
    <div class="container">
        <div class="section-heading">
            <h4>THE FAMILIES ON SENIOR EXECUTIVE COURSE ALUMNI</h4>
            <div class="section-heading-line-left"></div>
        </div>
        <div class="row mt-40">
            <div class="col-md-12 col-sm-12 col-12">
                <div class="pr-30-md">
                    <!-- Accordions Grey START -->
                    <div class="panel-group mt-10" id="accordion2" role="tablist" aria-multiselectable="true">
                        @foreach (var x in Model.CategoryFamiliesOnSEC)
                        {
                            <div class="panel panel-grey accordion">
                                <div class="panel-heading accordion-heading" role="tab" id="acc1">
                                    <h4 class="panel-title accordion-title">
                                        <a role="button" data-toggle="collapse" data-parent="#accordion2" href="#ac_col1_@x.Title.Replace(" ", "")" aria-expanded="true" aria-controls="ac_col1_@x.Title.Replace(" ", "")">
                                            @x.Title
                                        </a>
                                    </h4>
                                </div>
                                <div id="ac_col1_@x.Title.Replace(" ", "")" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="acc1">
                                    <div class="panel-body accordion-body">
                                        @foreach (var n in x.SubCategories)
                                        {
                                            <div class="col-md-12 col-sm-12 col-12" style="margin-bottom:10px;">
                                                <div class="serv-section-2" style="box-shadow: 2px 2px 2px 2px #333333;">
                                                    <div class="serv-section-2-icon">
                                                        <i class="icon-checked"></i>
                                                    </div>
                                                    <div class="serv-section-desc">
                                                        <h4> @n.Title</h4>
                                                    </div>
                                                    <div class="section-heading-line-left"></div>
                                                    <h4 style="font-size:13px;">Alumni Member</h4>
                                                    @foreach (var p in n.ParticipantFamiliesOnSECs)
                                                    {
                                                        <p class="text">
                                                            @p.Participant.Fullname (SEC @p.Participant.SEC.Number - @p.Participant.SEC.Year)
                                                        </p>
                                                    }
                                                </div>
                                            </div>

                                        }

                                    </div>
                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




