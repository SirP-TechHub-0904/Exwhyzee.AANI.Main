@page
@model Exwhyzee.AANI.Web.Pages.ExecutivePageModel
@{
}
@using Exwhyzee.AANI.Web.Helper.BaseHelper;
@using Exwhyzee.AANI.Domain.Models;
@inject IBaseModel BaseModel;
@using System.Text.RegularExpressions;
@{

    List<Executive> GetExecutives = await BaseModel.GetExecutives();
    ContactSettingsModel Settings = await BaseModel.GetSettings();
}




<section class="team-one executive-mx">
    <div class="container">
        <div class="section-title text-left sec-title-animation animation-style2">
            <div class="section-title__tagline-box">
                <span class="section-title__tagline">@Settings.EventSubtitle</span>
                <div class="section-title__tagline-shape"></div>
            </div>
            <h2 class="section-title__title title-animation">@Settings.EventTitle</h2>
        </div>

        <div class="team-one__carousel owl-theme owl-carousel">
            @foreach (var ps in GetExecutives)
            {

                <div class="item">
                    <div class="team-one__single">
                        <div class="team-one__content">
                            <h3 class="team-one__name"><a href="#">@ps.Participant.Fullname</a></h3>
                            <p class="team-one__sub-title">@ps.ExecutivePosition.Position</p>
                        </div>
                        <div class="team-one__img-box">
                            <div class="team-one__img">
                                <img src="@ps.Participant.PictureUrl" alt="@ps.Participant.Fullname">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
