@page
@model Exwhyzee.AANI.Web.Pages.IndexModel
@{
}

<!-- Main Slider Start -->
<section class="main-slider">
    <div class="main-slider__carousel owl-carousel owl-theme">
        @foreach (var item in Model.Sliders)
        {
            <!-- Slider 1 -->
            <div class="item">
                <div class="main-slider__bg" style="background-image: url(@item.Url);"></div>
                <div class="main-slider__overly"></div>
                <div class="main-slider__shape-1"></div>


                <div class="container">
                    <div class="main-slider__content">
                        <div class="main-slider__sub-title-box">
                            <div class="main-slider__sub-title-shape"></div>
                            <p class="main-slider__sub-title"> @Html.Raw(item.MiniTitle)</p>
                        </div>
                        <h2 class="main-slider__title">
                            @Html.Raw(item.Title)
                        </h2>
                        <p class="main-slider__text">
                            @Html.Raw(item.Text)
                        </p>
                        <div class="main-slider__btn-box">
                            <div class="main-slider__btn">
                                <a href="@item.SliderLinkUrl" class="thm-btn">
                                    <span class="thm-btn-text">@item.SliderLinkUrlTitle</span>
                                    <span class="thm-btn-icon-box"><i class="fas fa-arrow-right"></i></span>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- Slider 2 -->

    </div>
</section>
@await Html.PartialAsync("_PageSections", new { position = "top", pageset = "home", id = 0, secid = 0 })

<section class="blog-one custom-blog-01">

    <div class="container">
        <!-- Section Title -->
        <div class="section-title text-left sec-title-animation animation-style2">
            <div class="section-title__tagline-box justify-content-center">
                <div class="section-title__tagline-shape"></div>
                <span class="section-title__tagline">Latest Update </span>
                <div class="section-title__tagline-shape"></div>
            </div>
            <h2 class="section-title__title title-animation" style="perspective:400px;">
                News
            </h2>
        </div>

        <!-- Blog Carousel -->
        <div class="blog-one__carousel owl-carousel owl-theme">
            @foreach (var x in Model.Blogs)
            {
                <div class="blog-one__single">
                    <div class="blog-one__img-box">
                        <div class="blog-one__img">
                            <img src="@x.ImageUrl" alt="@x.Title">
                            <div class="blog-one__tags">
                                <span>@(x.BlogCategory?.Title ?? "")</span>
                            </div>
                        </div>
                        <div class="blog-one__date">
                            <p>@x.Date.ToString("dd")</p>
                            <span>@x.Date.ToString("MMM")</span>
                        </div>
                    </div>
                    <div class="blog-one__content">
                        <ul class="blog-one__meta list-unstyled">
                            <li>
                                <a asp-page="/Media/ReadMore" asp-route-id="@x.Id" asp-route-title="@x.Title.Replace(",", "-").Replace(".", "-").Replace("&", "-").Replace(" ", "-").Replace("@", "-")">
                                    <span class="fas fa-user"></span>@x.Author
                                </a>
                            </li>
                            <li>
                                <a asp-page="/Media/ReadMore" asp-route-id="@x.Id" asp-route-title="@x.Title.Replace(",", "-").Replace(".", "-").Replace("&", "-").Replace(" ", "-").Replace("@", "-")">
                                    <span class="fas fa-comments"></span>@(x.Comments?.Count() ?? 0)
                                </a>
                            </li>
                        </ul>
                        <h3 class="blog-one__title">
                            <a asp-page="/Media/ReadMore" asp-route-id="@x.Id" asp-route-title="@x.Title.Replace(",", "-").Replace(".", "-").Replace("&", "-").Replace(" ", "-").Replace("@", "-")">
                                @x.Title
                            </a>
                        </h3>
                        <p class="blog-one__text">
                            @x.ShortDescription
                        </p>
                        <p><i>source: @x.Source</i></p>
                        <a class="blog-one__read-more" asp-page="/Media/ReadMore" asp-route-id="@x.Id" asp-route-title="@x.Title.Replace(",", "-").Replace(".", "-").Replace("&", "-").Replace(" ", "-").Replace("@", "-")">
                            Read More <span class="fas fa-arrow-right"></span>
                        </a>
                    </div>
                </div>
            }

        </div><!-- /.blog-one__carousel -->
    </div>
</section>


@await Html.PartialAsync("_PageSections", new { position = "bottom", pageset = "home", id = 0, secid = 0 })
