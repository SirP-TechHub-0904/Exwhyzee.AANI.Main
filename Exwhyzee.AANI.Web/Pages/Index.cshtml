@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    .feature-flex-content p {
        color: #343131;
        font-weight: 400;
        margin-top: 10px;
    }
</style>
<style>

    .image1, .image2, .image3, .image4, .image5, .image6, .image7, .image8 {
        flex-shrink: 0;
        overflow: hidden;
    }

        .image1, .image2, .image3, .image4, .image5, .image6, .image7 img {
            display: block;
            height: 100%;
            object-fit: cover;
            overflow: hidden;
        }

    .text1, .text2, .text3, .text4, .text5, .text6, .text7 {
        flex-grow: 1;
        overflow: hidden;
        text-overflow: ellipsis;
    }
